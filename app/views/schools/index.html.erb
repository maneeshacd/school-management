<% if policy(School).new? %>
  <%= link_to "New School", new_school_path, class: 'btn btn-secondary btn-sm float-end' %>
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th class='w-15' scope="col">name</th>
      <th class='w-50' scope="col">Description</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if @schools.blank? %>
      <tr>
        <td colspan='3'><center>No Data available in table</center></td>
      </tr>
    <%else%>
      <% @schools.each do |school| %>
        <tr>
          <td><%= school.name%></td>
          <td class=><%= school.description%></td>
          <td>
            <%= link_to "Show", school_path(school), class: 'btn btn-success btn-sm' %>
            <%= link_to "School Admins", school_school_admins_path(school), class: 'btn btn-warning btn-sm' %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
