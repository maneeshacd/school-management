<div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
    <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
        <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            <span class="fs-5 d-none d-sm-inline">Menu</span>
        </a>
        <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
            <% if policy(School).home? %>
                <li class="nav-item">
                    <a href=<%= root_path%> class="nav-link align-middle px-0">
                        <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">School</span>
                    </a>
                </li>
            <%end%>
            <% if policy(School).index? %>
                <li class="nav-item">
                    <a href=<%= schools_path%> class="nav-link align-middle px-0">
                        <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Schools</span>
                    </a>
                </li>
            <%end%>
            <% if policy(Course).index? %>
                <li>
                    <a href=<%= courses_path %> class="nav-link px-0 align-middle">
                        <i class="fs-4 bi-table"></i> <span class="ms-1 d-none d-sm-inline">Courses</span></a>
                </li>
            <%end%>
            <% if policy(Enrollment).student_index? %>
                <li>
                    <a href=<%= enrollments_path %> class="nav-link px-0 align-middle">
                        <i class="fs-4 bi-table"></i> <span class="ms-1 d-none d-sm-inline">Enrolled Batches</span></a>
                </li>
            <% end %>
        </ul>
    </div>
</div>
