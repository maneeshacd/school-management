<div class="container mt-5">
  <div class="card">
    <div class="card-header">
        <h3><%= @school_admin.name %></h3>
    </div>
    <div class="card-body">
      <%= form_with(scope: :school_admin, url: school_school_admin_path(@school, @school_admin), method: :patch) do |form| %>
        <% if @school_admin.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(@school_admin.errors.count, "error") %> prohibited this school_admin from being saved:</h2>

            <ul>
              <% @school_admin.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
          <div class="mb-3">
              <%= form.label :name, class: 'form-label' %>
              <%= form.text_field :name, class: 'form-control' %>
          </div>

          <div class="mb-3">
              <%= form.label :email, class: 'form-label' %>
              <%= form.email_field :email, class: 'form-control' %>
          </div>

          <div class="mb-3">
              <%= form.label :phone_number, class: 'form-label' %>
              <%= form.text_field :phone_number, class: 'form-control' %>
          </div>

          <div class="mb-3">
              <%= form.label :password, class: 'form-label' %>
              <%= form.password_field :password, class: 'form-control', value: @school_admin.password %>
          </div>

          <div class="mb-3">
              <%= form.label :password_confirmation, class: 'form-label' %>
              <%= form.password_field :password_confirmation, class: 'form-control', value: @school_admin.password_confirmation %>
          </div>

          <div class="mb-3">
              <%= form.label :description, class: 'form-label' %>
              <%= form.text_area :description, class: "form-control" %>
          </div>

          <%= form.submit nil, class: 'btn btn-primary btn-md float-end' %>
          <br>
      <%end%>



      <hr>
      <td><%= link_to "<< Back", school_school_admins_path, class: 'btn btn-primary btn-sm ' %></td>
    </div>
  </div>
</div>
