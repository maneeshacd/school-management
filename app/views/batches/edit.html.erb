<div class="container mt-5">
  <div class="card">
    <div class="card-header">
        <h3> Edit Course </h3>
    </div>
    <div class="card-body">
      <%= render "form", batch: @batch, url: course_batch_path(@course, @batch), _method: :patch %>
      <hr>
      <td><%= link_to "Show", course_batch_path(@course, @batch), class: 'btn btn-success btn-sm ' %></td>
      <td><%= link_to "<< Back", course_batches_path(@course), class: 'btn btn-primary btn-sm ' %></td>
    </div>
  </div>
</div>
